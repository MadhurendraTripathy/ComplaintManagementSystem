<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.complaintmanagementsystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ShowComments"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".HomePageAfterLogin" />
        <activity android:name=".SignupActivity" />
        <activity
            android:name=".ComplaintInDetail"
            android:parentActivityName=".CMSactivity" />
        <activity
            android:name=".AddNewComplaint"
            android:parentActivityName=".CMSactivity" />
        <activity
            android:name=".CMSactivity"
            android:parentActivityName=".HomePageAfterLogin" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>